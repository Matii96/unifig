{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "passWithNoTests": true,
  "testRegex": "\\.spec.ts$",
  "coveragePathIgnorePatterns": ["<rootDir>/examples", "<rootDir>/.*/dist/", "<rootDir>/.*\\.mocks\\.ts"],
  "coverageThreshold": {
    "global": {
      "lines": 95
    }
  },
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "maxWorkers": 4
}
